{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2021"
    ],
    "strict": true,
    "module": "CommonJS",
    "target": "es2021",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}